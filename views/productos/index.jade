extends ../layout

block content
  .body3
    .main
      - if(resultado.length)
        table
          tr
            th Codigo
            th Nombre
            th Precio
            th ID
              each producto in resultado
                tr
                  td #{producto.codigo}
                  td #{producto.nombre}
                  td #{producto.precio}
                  td #{producto._id}
      - else
        p No tienes ningun producto