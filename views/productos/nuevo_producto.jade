extends ../layout

block content

  .body3
    .main
      h1 Nuevo Producto
      br

      form(method="POST", action="/productos/nuevo_producto", enctype="multipart/form-data")

        p Codigo:
          input(type="number" name="codigo")

        p Nombre:
          input(type="text" name="nombre")

        p Stock:
          input(type="number" name="stock")

        p Precio:
          input(type="number" name="precio")

        p Imagen:
          input(type="file" name="imagen")

        p
          button(type="submit") Enviar